pipeline {
    agent { label 'docker' }
    triggers { pollSCM('* * * * *') }
    environment {
        dotnet ='/home/ubuntu/mahesh/'
    }
    stages {
        stage('Cloning_the_git') {
            steps {
                git branch: 'main',
                       url: 'https://github.com/maheshryali123/poojastores.git'
            }
        }
        stage('Copy_the_code') {
            steps {
                sh """
                cp -r /home/ubuntu/remote_repo/workspace/poojastores/ppojastores/trunk/PoojaStores/* /home/ubuntu/mahesh/
                """
            }
        }
        stage('Build_the_code') {
            steps {
                sh """
                /home/ubuntu/mahesh/dotnet build PoojaStores.csproj
                """
            }    
        }
    }
}